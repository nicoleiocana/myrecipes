<%= render 'shared/page_title', title: "Log in" %>

<%= form_for(:session, html: {class:'form-horizontal'}, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email, class:'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.email_field :email, class:'form-control', placeholder: "Enter your email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class:'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.password_field :password, class:'form-control', placeholder: "Enter your password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-8">
      <%= f.submit "Log in", class:'btn btn-primary btn-lg btn-xlg' %>
    </div>
  </div>
<% end %>
<div class="col-md-4 col-md-offset-4 colormatch text-center">
  [<%= link_to "Don't have an account? Sign up now!", signup_path %>]
</div>